<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="card my-4">
  <div class="card-body">
    <h4 class="card-title"><%= @product.name %></h4>
    <p class="card-text"><strong>Description:</strong> <%= @product.description %></p>
    <p class="card-text"><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-warning" %>
  <%= link_to "Back to products", products_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
</div>
