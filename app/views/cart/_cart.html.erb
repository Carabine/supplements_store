<%= turbo_frame_tag "cart" do %>
  <div class="container my-4">
    <h1 class="mb-3">Your Cart</h1>
    <% if @cart.orderables.count > 0 %>
      <%= render "cart/orderables" %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <h5><strong>Total:</strong> <%= number_to_currency(@cart.total) %></h5>
      </div>
      <div class="mt-4">
        <label for="delivery-method" class="form-label">Select Delivery</label>
        <select id="delivery-method" class="form-select">
          <option value="nova_poshta">Nova Poshta</option>
          <option value="ukr_poshta">UkrPoshta</option>
        </select>
      </div>
      <div class="mt-3">
        <a href="https://app-wallee.com/s/746/payment/link/process/2/YuqWqVM2Y8iyQb2NmJDPdNJXwQAljvKIAf2zkC_v4Ew" class="btn btn-success" target="_blank">
          Proceed to Payment
        </a>
      </div>
    <% else %>
      <div class="alert alert-warning text-center" role="alert">
        Your cart is empty.
      </div>
    <% end %>
  </div>
<% end %>
